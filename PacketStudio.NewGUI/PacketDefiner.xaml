<UserControl x:Class="ByteArrayToPcap.NewGUI.PacketDefiner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ByteArrayToPcap.NewGUI"
             mc:Ignorable="d" Width="345" Height="315" Loaded="UserControl_Loaded">
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="hexTextBox" Grid.ColumnSpan="2" 
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 TextChanged="hexTextBox_TextChanged"
                 LostFocus="hexTextBox_LostFocus"/>
         <ListBox x:Name="templatesListBox" Grid.Row="1" Margin="5" SelectionChanged="ListBox_SelectionChanged">
            <ListBoxItem>Placeholder</ListBoxItem>
         </ListBox>
         <DockPanel x:Name="packetTemplatePanel" Grid.Column="1" Grid.Row="1" LastChildFill="True"/>

        </Grid>
</UserControl>
