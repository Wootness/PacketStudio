<UserControl x:Class="ByteArrayToPcap.NewGUI.PacketTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ByteArrayToPcap.NewGUI"
             xmlns:wpfJokes="clr-namespace:ByteArrayToPcap.NewGUI.WpfJokes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <wpfJokes:WidthToRightPaddingConverter x:Key="WidthToRightPaddingConverter"/>
    </UserControl.Resources>
                <TreeView x:Name="previewTree" FontFamily="Consolas" FontSize="12" Margin="0" Foreground="#FF000001" >
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <EventSetter Event="RequestBringIntoView" Handler="TreeViewItem_RequestBringIntoView"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeViewItem Header="" Background="White" ToolTipService.IsEnabled="False" Padding="{Binding ActualWidth, Converter={StaticResource WidthToRightPaddingConverter}, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TreeView}}}" />
                </TreeView>
</UserControl>
